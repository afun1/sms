# Environment variables for Twilio SMS service
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# SimpleTalk.ai Configuration
SIMPLETALK_API_KEY=your_simpletalk_api_key_here
SIMPLETALK_BASE_URL=https://api.simpletalk.ai/v1
SIMPLETALK_MODEL=gpt-4

# Multi-Provider Email Configuration
# Gmail SMTP (Free tier)
GMAIL_EMAIL=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# SendGrid API (Professional email service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Mailgun API (Developer-friendly email API)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=yourdomain.com

# Amazon SES SMTP (Enterprise email service)
AWS_SES_SMTP_USERNAME=your_aws_ses_smtp_username
AWS_SES_SMTP_PASSWORD=your_aws_ses_smtp_password
AWS_REGION=us-east-1

# Additional SMS Providers
# ClickSend Multi-Service API (SMS + Email + Voice)
CLICKSEND_USERNAME=your_clicksend_username
CLICKSEND_API_KEY=your_clicksend_api_key
CLICKSEND_FROM_EMAIL=noreply@yourdomain.com

# TextBelt SMS API
TEXTBELT_API_KEY=your_textbelt_api_key

# Slybroadcast RVM Configuration
SLYBROADCAST_EMAIL=your_slybroadcast_email
SLYBROADCAST_PASSWORD=your_slybroadcast_password
